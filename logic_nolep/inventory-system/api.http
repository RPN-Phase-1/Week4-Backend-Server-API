@BASE_URL = http://localhost:3000/api
@API_KEY = your-api-key-here
@JWT_TOKEN = your-jwt-token-here

@userId = user-id
@tokenId = token-id
@categoryId = category-id
@productId = product-id
@orderId = order-id

### Create User
POST {{BASE_URL}}/users
Content-Type: application/json
# Authorization: Bearer {{JWT_TOKEN}}

{
  "name": "Fitra",
  "email": "fitra2@gmail.com",
  "password": "securepassword123",
  "role": "customer"
}

### Get All Users
GET {{BASE_URL}}/users
# Authorization: Bearer {{JWT_TOKEN}}

### Get User by ID
GET {{BASE_URL}}/users/{{userId}}
# Authorization: Bearer {{JWT_TOKEN}}

### Update User
PUT {{BASE_URL}}/users/{{userId}}
Content-Type: application/json
# Authorization: Bearer {{JWT_TOKEN}}

{
  "name": "John Updated",
  "email": "john.updated@gmail.com"
}

### Delete User
DELETE {{BASE_URL}}/users/{{userId}}
# Authorization: Bearer {{JWT_TOKEN}}

### Create Token
POST {{BASE_URL}}/tokens
Content-Type: application/json
# Authorization: Bearer {{JWT_TOKEN}}

{
  "token": "random-generated-token",
  "userId": "{{userId}}",
  "type": "access",
  "expires": "2025-01-21T00:00:00Z",
  "blacklisted": false
}

### Get All Tokens
GET {{BASE_URL}}/tokens
# Authorization: Bearer {{JWT_TOKEN}}

### Get Token by ID
GET {{BASE_URL}}/tokens/{{tokenId}}
# Authorization: Bearer {{JWT_TOKEN}}

### Update Token
PUT {{BASE_URL}}/tokens/{{tokenId}}
Content-Type: application/json
# Authorization: Bearer {{JWT_TOKEN}}

{
  "blacklisted": true
}

### Delete Token
DELETE {{BASE_URL}}/tokens/{{tokenId}}
# Authorization: Bearer {{JWT_TOKEN}}

