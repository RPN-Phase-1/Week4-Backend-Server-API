### Create Product
POST {{BASE_URL}}/products
Content-Type: application/json
# Authorization: Bearer {{JWT_TOKEN}}

{
  "name": "New Product",
  "description": "A detailed description of the new product.",
  "price": 150.00,
  "quantityInStock": 100,
  "categoryId": "{{categoryId}}",
  "userId": "{{userId}}"
}

### Get All Products
GET {{BASE_URL}}/products
# Authorization: Bearer {{JWT_TOKEN}}

### Get Product by ID
GET {{BASE_URL}}/products/{{productId}}
# Authorization: Bearer {{JWT_TOKEN}}

### Update Product
PUT {{BASE_URL}}/products/{{productId}}
Content-Type: application/json
# Authorization: Bearer {{JWT_TOKEN}}

{
  "name": "Updated Product",
  "description": "Updated description",
  "price": 200.00,
  "quantityInStock": 50
}

### Delete Product
DELETE {{BASE_URL}}/products/{{productId}}
# Authorization: Bearer {{JWT_TOKEN}}

### Create Order
POST {{BASE_URL}}/orders
Content-Type: application/json
# Authorization: Bearer {{JWT_TOKEN}}

{
  "totalPrice": 250.00,
  "customerName": "Fitra",
  "customerEmail": "fitra@gmail.com",
  "userId": "{{userId}}",
  "orderItems": [
    {
      "productId": "{{productId}}",
      "quantity": 2,
      "unitPrice": 100.00
    },
    {
      "productId": "{{productId}}",
      "quantity": 1,
      "unitPrice": 50.00
    }
  ]
}

### Get All Orders
GET {{BASE_URL}}/orders
# Authorization: Bearer {{JWT_TOKEN}}

### Get Single Order by ID
GET {{BASE_URL}}/orders/{{orderId}}
# Authorization: Bearer {{JWT_TOKEN}}

### Update Order
PUT {{BASE_URL}}/orders/{{orderId}}
Content-Type: application/json
# Authorization: Bearer {{JWT_TOKEN}}

{
  "totalPrice": 300.00,
  "customerName": "Ilyasa"
}

### Delete Order
DELETE {{BASE_URL}}/orders/{{orderId}}
# Authorization: Bearer {{JWT_TOKEN}}