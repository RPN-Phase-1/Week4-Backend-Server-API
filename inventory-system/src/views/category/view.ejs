<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Category</h1>
    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me 2">
            <a href="/category/add" class="btn btn-sm btn-outline-secondary">+ New Category</a>
        </div>
    </div>

    
</div>

<% messages.forEach(element => { %>
    <div class="alert alert-success alert-dismissible show" role="alert">
        <%= element %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>       
    </div>
<% }); %>


<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
            <% categorys.forEach(element =>{ %>
                <tr class="align-middle">
                    <td><%= element.name  %></td>
                    <td class="text-end">
                        <div class="d-flex flex-row justify-content-end gap-2">

                            <a href="/category/detail/<%= element.id %>" type="button" class="btn btn-primary btn-small">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="/category/edit/<%= element.id %>" type="button" class="btn btn-warning btn-small">
                                <i class="bi bi-pencil"></i>
                            </a>

                            <form action="/category/edit/<%= element.id %>?_method=DELETE" method="POST" class="position-relative">
                                <button type="submit" class="btn btn-danger btn-small">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                           


                        </div>
                    </td>
                </tr>
            <% }) %>
            
        </tbody>
    </table>
</div>


<% if(categorys.length>0){ %>
    <nav aria-label="Dashboard Pagination">
        <ul class="pagination justify-content-center mt-5">
            <% if(page===1){ %>
                <li class="page-item disabled"><span class="page-link">First</span></li>
            <% } else { %>
                <li class="page-item"><a href="/category/?page=1" class="page-link">First</a></li>
            <% } %>
            
            <% var i = (Number(page)>5 ? Number(page)-4 : 1) %>
            <% if(i!==1){ %>
                <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
            <% } %>
           
            <% for(; i <= Math.min((Number(page) + 4), lastPage); i++ ) { %>
                <% if (i == page) { %>
                  <li class="page-item disabled"><a href="#" class="page-link"><%= i %></a></li>
                <% } else { %>
                  <li class="page-item"><a href="/category/?page=<%= i %>" class="page-link"><%= i %></a></li>
                <% } %>
                <% if (i == Math.min((Number(page) + 4), lastPage) && i < lastPage) { %>
                  <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
                <% } %>
            <% } %>

            <% if (page == lastPage) { %>
                <li class="page-item disabled"><a href="#" class="page-link">Last</a></li>
              <% } else { %>
                <li class="page-item"><a href="/category/?page=<%= lastPage %>" class="page-link">Last</a></li>
              <% } %>

        </ul>

    </nav>
<% } %>