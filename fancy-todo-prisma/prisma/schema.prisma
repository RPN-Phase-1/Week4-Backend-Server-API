generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  name  String
  email String
  phone String
  todos Todo[]
}

model Todo {
  id          String @id @default(uuid())
  title       String
  description String
  status      String
  userId      String 
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}