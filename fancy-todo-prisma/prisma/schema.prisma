// schema.prisma
generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    String   @id @default(uuid())
  name  String
  email String   @unique
  phone String   @unique
  todo  Todo[]
}

model Todo{
  id            String     @id @default(uuid())
  title         String
  description   String
  status        String
  userId        String
  user          User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}